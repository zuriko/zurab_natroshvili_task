{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Page Not Found (404)
{% endblock %}

{% block body %}
	<div class="container text-center mt-5">
		<h1 class="display-4 text-danger">404</h1>
		<h2 class="mb-4">Oops! Page not found.</h2>
		<p class="text-muted">Sorry, the page you are looking for does not exist or has been moved.</p>
		<a href="{{ path('admin_dashboard') }}" class="btn btn-primary mt-3">Go to Dashboard</a>
		<a href="{{ path('public_homepage') }}" class="btn btn-secondary mt-3">Go to Homepage</a>
	</div>
{% endblock %}
