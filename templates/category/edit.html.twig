{% extends 'base.html.twig' %}

{% block title %}Edit Category |
	{{ category.title }}
{% endblock %}

{% block body %}
	<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
		<div class="col-12 col-md-8 col-lg-6">
			<div class="card border-0 shadow-lg rounded-4">
				<div class="card-header rounded-top-4 px-4 py-3" style="background: linear-gradient(90deg,#43cea2 0%,#185a9d 100%);">
					<div class="d-flex flex-column">
						<h2 class="mb-0 text-white fw-bold">Edit Category</h2>
						<small class="fw-light text-white-50">ID:
							{{ category.id }}</small>
					</div>
				</div>
				<div class="card-body p-4">
					{{ include('category/_form.html.twig', {'button_label': 'Update', 'category': category}) }}

					<div class="d-flex justify-content-between mt-4">
						<a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
							<i class="bi bi-arrow-left"></i>
							Back to List
						</a>
						<form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
							<button class="btn btn-danger rounded-pill px-4 fw-bold">
								<i class="bi bi-trash"></i>
								Delete Category
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
