{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	{% include '_admin_nav.html.twig' %}

	<div class="container mt-4">
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h1 class="h3 fw-bold">Categories</h1>
			<a href="{{ path('admin_category_new') }}" class="btn btn-success rounded-pill fw-bold shadow-sm px-4">
				+ Create New
			</a>
		</div>

		<div class="table-responsive">
			<table class="table table-striped table-hover category-table align-middle">
				<thead class="table-dark rounded-top">
					<tr>
						<th class="col-id">ID</th>
						<th>Title</th>
						<th style="width:110px;">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td class="fw-semibold">{{ category.title }}</td>
							<td>
								<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary rounded-pill px-3">
									Edit
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3" class="text-center text-muted">No categories found.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="d-flex justify-content-center mt-4">
				{{ knp_pagination_render(categories) }}
			</div>
		</div>

	</div>
{% endblock %}
