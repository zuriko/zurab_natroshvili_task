{% extends 'base.html.twig' %}

{% block title %}Create New Category
{% endblock %}

{% block body %}
	<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
		<div class="col-12 col-md-8 col-lg-6">
			<div class="card border-0 shadow-lg rounded-4">
				<div class="card-header rounded-top-4 px-4 py-3" style="background: linear-gradient(90deg,#396afc 0%,#2948ff 100%);">
					<h2 class="mb-0 text-white fw-bold">
						<i class="bi bi-folder-plus me-2"></i>
						Create New Category
					</h2>
				</div>
				<div class="card-body p-4">
					{{ form_start(form) }}
					<div class="mb-4">
						{{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
						{{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Category Title', 'autocomplete': 'off'}}) }}
						{{ form_errors(form.title) }}
					</div>
					<div class="d-flex justify-content-between align-items-center">
						<a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
							<i class="bi bi-arrow-left"></i>
							Back to List
						</a>
						<button class="btn btn-success rounded-pill px-4 fw-bold" style="min-width:120px;">
							<i class="bi bi-plus-lg"></i>
							Create
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
