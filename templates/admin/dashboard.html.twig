{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Welcome to the Admin Dashboard</h1>
		<p>This page is only visible to logged-in administrators.</p>
		<div class="d-flex gap-3 mt-4">
			<a href="{{ path('admin_category_index') }}" class="btn btn-outline-primary btn-lg">Manage Categories</a>
